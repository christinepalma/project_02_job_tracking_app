<p>&nbsp;</p>
<div class="col-md-3">
<h1>create a user account</h1>
<p>&nbsp;</p>

<%= form_for @user, class:"navbar-form navbar-right", role:"form" do |a| %>
<div class="input-group"><span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
<%= a.text_field :firstname, placeholder:"first name", class:"form-control"  %></div>
<p></p>
<div class="input-group"><span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
<%= a.text_field :lastname, placeholder:"last name", class:"form-control" %></div>
<p></p>
<div class="input-group"><span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
<%= a.text_field :username, placeholder:"username", class:"form-control" %></div>
<p></p>
<div class="input-group">
<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span><%= a.text_field :email, placeholder:"email", class:"form-control" %></div>
<p></p>
<div class="input-group">
<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span><%= a.password_field :password, placeholder:"password", class:"form-control"  %></div>
<p></p>
<div class="input-group">
<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span><%= a.password_field :password_confirmation, placeholder:"password confirmation", class:"form-control"  %></div>

<p></p>
<%= a.submit "add user", {class: "btn btn-primary"}%>
<% end %>
</div>
